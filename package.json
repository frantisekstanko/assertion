{
  "name": "@frantisekstanko/assertion",
  "version": "0.4.1",
  "description": "Type-safe assertion library for TypeScript",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/tests",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "test": "jest --bail",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "lint": "eslint . && tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "assertion",
    "typescript",
    "type-guard",
    "validation",
    "runtime-validation",
    "type-narrowing",
    "type-safety",
    "assert",
    "validator",
    "type-checking",
    "runtime-checks",
    "esm",
    "zero-dependencies",
    "hexagonal-architecture",
    "clean-architecture"
  ],
  "author": "Frantisek Stanko",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frantisekstanko/assertion.git"
  },
  "bugs": {
    "url": "https://github.com/frantisekstanko/assertion/issues"
  },
  "homepage": "https://github.com/frantisekstanko/assertion#readme",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "jest": "^30.0.5",
    "jiti": "^2.6.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.45.0"
  }
}
